<h2>Lista de categotias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação : {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-success mt-2">Editar </button></a>
        <form action="/admin/categorias/delete" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
        </div>
    </div>
{{else}}
    <h5 class="mt-4">Nenhuma categoria foi criada</h5>
{{/each}}